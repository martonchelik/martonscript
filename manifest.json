{
  "manifest_version": 3,
  "name": "Fee Auto Tick",
  "version": "1.0",
  "description": "Автоматическая галочка на комиссии",
  "background": {
    "service_worker":
      "background.js"
  },

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "host_permissions": ["https://admin.crimson./*.prd.maxbit.private/admin/payments//*", "file:///F:/work/igaming/*"],
  "content_scripts": [
    {
      "matches": ["*://*.prd.maxbit.private/admin/payments/*", "file:///F:/work/igaming/etc/*"],
      "js": ["autofee.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.prd.maxbit.private/admin/bets/*", "file:///F:/work/igaming/bets/*"],
      "js": ["coefficient.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
